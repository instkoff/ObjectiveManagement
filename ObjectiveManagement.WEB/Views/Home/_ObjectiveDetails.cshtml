@model ObjectiveModel
<div class="title">Детали задачи:</div>
<form class="content-form" id="ObjectiveDetailsForm" asp-action="Update" asp-controller="Objective">
    <div class="objective-details-item">
        <input asp-for="Name" class="objective-details-input" placeholder="Наименование задачи" value="@Model.Name" />
    </div>
    <div class="objective-details-item">
        <textarea asp-for="Description" class="objective-details-input" placeholder="Описание задачи" cols="30" rows="10">@Model.Description</textarea>
    </div>
    <div class="objective-details-item">
        <textarea asp-for="Performers" class="objective-details-input" placeholder="Список исполнителей" cols="10" rows="10">@Model.Performers</textarea>
    </div>
    <div class="objective-details-item">
        <span class="date-time">
            <label asp-for="CreatedTime">Дата создания:</label>
            <input asp-for="CreatedTime" class="objective-details-input date-input" id="createTime" value="@Model.CreatedTime" readonly />
        </span>
        @if (Model.ObjectiveStatus == ObjectiveStatus.Completed)
        {
            <span class="date-time">
                <label asp-for="CompletedTime">Дата завершения:</label>
                <input asp-for="CompletedTime" class="objective-details-input date-input" id="completedTime" value="@Model.CompletedTime" readonly />
            </span>
        }
    </div>
    <div class="objective-details-item">
        <span class="quantity">
            <input asp-for="EstimateTime" class="objective-details-input" value="@Model.EstimateTime" />
        </span>
        <span class="quantity">
            <input asp-for="TotalSubObjectivesEstimateTime" class="objective-details-input" value="@Model.TotalSubObjectivesEstimateTime" readonly />
        </span>
        <span class="quantity">
            <input asp-for="FactTime" class="objective-details-input" value="@Model.FactTime" />
        </span>
        <span class="quantity">
            <input asp-for="TotalSubObjectivesFactTime" class="objective-details-input" value="@Model.TotalSubObjectivesFactTime" />
        </span>

    </div>
    <div class="objective-details-item">
        <div class="status-radio">
            <div class="title">Статус задачи:</div>
            @*<input type="radio" id="AssignedChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.Assigned" checked />
        <label for="AssignedChoice">Назначена</label>
        <input type="radio" id="InProgressChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.InProgress" />
        <label for="InProgressChoice">Выполняется</label>
        <input type="radio" id="SuspendedChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.Suspended" />
        <label for="SuspendedChoice">Приостановлена</label>
        <input type="radio" id="CompletedChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.Completed" />
        <label for="CompletedChoice">Завершена</label>*@
            @switch (Model.ObjectiveStatus)
            {
                case ObjectiveStatus.Assigned:
                    <input type="radio" id="AssignedChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.Assigned" checked />
                    <label for="AssignedChoice">Назначена</label>
                    <input type="radio" id="InProgressChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.InProgress" />
                    <label for="InProgressChoice">Выполняется</label>
                    break;
                case ObjectiveStatus.InProgress:
                    <input type="radio" id="InProgressChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.InProgress" />
                    <label for="InProgressChoice">Выполняется</label>
                    <input type="radio" id="SuspendedChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.Suspended" />
                    <label for="SuspendedChoice">Приостановлена</label>
                    <input type="radio" id="CompletedChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.Completed" />
                    <label for="CompletedChoice">Завершена</label>
                    break;
                case ObjectiveStatus.Suspended:
                    <input type="radio" id="InProgressChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.InProgress" />
                    <label for="InProgressChoice">Выполняется</label>
                    <input type="radio" id="SuspendedChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.Suspended" />
                    <label for="SuspendedChoice">Приостановлена</label>
                    break;
                case ObjectiveStatus.Completed:
                    <input type="radio" id="CompletedChoice" asp-for="ObjectiveStatus" value="@ObjectiveStatus.Completed" />
                    <label for="CompletedChoice">Завершена</label>
                    break;
            }
        </div>
    </div>

    <div class="actions">
        <button class="button save-objective">Сохранить</button>
    </div>
</form>
